---
import check from "/public/check.svg";
const { img, array, title } = Astro.props;
---

<div
    class="
    group hover:shadow-2xl duration-300 hover:bg-white hover:-translate-y-0.5 hover:border-none
    flex flex-col items-start border rounded-2xl border-primary-100/50 h-full w-1/3 p-10 bg-neutral-100/50 backdrop-blur-sm"
>
    <img
        class="w-20 p-3 rounded-full bg-gray-200 mb-5"
        src={img?.src}
        alt={title}
        width={img?.width}
        height={img?.height}
    />
    <h2 class="text-primary-100 font-bold text-2xl mb-4">
        {title}
    </h2>
    <ul class="flex flex-col w-full font-semibold">
        {
            array?.map((element) => (
                <li class="flex items-center gap-5 ">
                    <img
                        class="w-10  "
                        src={check?.src}
                        alt={"check"}
                        width={check?.width}
                        height={check?.height}
                    />
                    <p class="font-thin">{element.title}</p>
                </li>
            ))
        }
    </ul>
</div>
