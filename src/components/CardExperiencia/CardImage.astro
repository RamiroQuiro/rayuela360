---
import { Image } from "astro:assets";
const{ title,img, description}=Astro.props
---
<div class="w-1/5 flex-shrink relative group duration-300 overflow-hidden h-72 rounded-2xl">
    <Image
    class="group-hover:scale-110 duration-300 w-full  h-full object-cover"
    width={100}
    height={100}
    alt={title}
    src={img}/>
<div class="bg-black/30 opacity-0 group-hover:opacity-100 duration-300 absolute w-full h-full top-0 left-0 backdrop-blur-[1px] flex items-center justify-center">
    <p class="bg-primary-resaltado/70 font-medium py-1.5 w-full text-left text-xs px-5 ">{description}</p>

</div>
</div>