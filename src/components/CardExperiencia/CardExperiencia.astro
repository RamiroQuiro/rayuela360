---
import ContenedorCardExperiencia from "./ContenedorCardExperiencia";
import ContenedorVide from "./ContenedorVide";
const { color,svg,videoSrc } = Astro.props;

---

<ContenedorCardExperiencia client:load color={color}>
    <div class="group-hover:h-[30vh] duration-500 w-1/4">
        <img alt="SVG" src={svg?.src} width={svg?.width} height={svg?.height} />
        
    </div>
    <div class="my-2 border-b w-1/4 text-center">
        <p class="text-lg font-thin my-2">No perderas un detalle. Imagenes capturadas con Camaras Full HD de ultima generacion</p>
    </div>
    <div class="flex flex-col items-start justify-between  gap-5 w-full relative -rotate-12">
          <div class=" z-10 bg-gradient-to-b from-white via-white/30 to-transparent backdrop-blur-sm absolute top-0 lef-0 w-full h-20"></div>
          <ContenedorVide client:load videoSrc={videoSrc}/>
          <div class=" z-10 bg-gradient-to-t from-white via-white/30 to-transparent backdrop-blur-sm absolute bottom-0 lef-0 w-full h-20"></div>
    </div>
</ContenedorCardExperiencia>
