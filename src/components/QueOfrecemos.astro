---
import Translado from "/translado.svg";
import cintaFotografica from "../../public/cintaFotografica.svg";
import fotoss from "./fotoss.svg";
import { Image } from "astro:assets";
const arrayCabina = [
    {
        title: "Fotos Ilimitadas",
        svg: fotoss
    },
    {
        title: "Dise√±o de Tira",
        svg: cintaFotografica
    },
    {
        title: "Translado a otras provincias",
        svg: Translado
    },
    {
        title: "Personal Capacitado",
        svg: Translado
    },
];
const arrayCabina2 = [
    {
        title: "Servicio de 2 hs",
        svg: fotoss
    },
    {
        title: "Camara de Alta Calidad, GoPro",
        svg: cintaFotografica
    },
    {
        title: "Videos cortos, formato para redes sociales",
        svg: Translado
    },
    {
        title: "Videos Ilimitados",
        svg: Translado
    },
    {
        title: "Sonido y Efecto",
        svg: Translado
    },
    {
        title: "Sistema de Descarga de videos sin Internet",
        svg: Translado
    },
];
---

<section
    id="ofrecemos"
    class="mx-auto bg-white flex flex-col items-center justify-center py-32 b backdrop-blur-sm w-full"
>
    <div class="w-10/12 flex items-center justify-start border-b py-2">
        <h1 class="text-5xl font-bold">Nuestro Servicio Cuenta</h1>
    </div>
    <div class="flex w-full items-stretch justify-evenly py-32 relative">
        <div
            class="flex flex-col items-start border rounded border-primary-200 h-full w-1/3 p-10"
        >
            <h2 class="text-primary-100 font-bold text-xl mb-4">
                Cabina Fotografica
            </h2>
            <ul class="flex flex-col w-full font-semibold">
                {
                    arrayCabina?.map((element, i) => (
                        <li class="flex items-center justify-between gap-5 my-3">
                            <div class="w-16">
                               </div>
                               <p class="font-thin">{element.title}</p>
                        </li>
                    ))
                }

            </ul>
        </div>
        <div
        class="flex flex-col items-start border rounded border-primary-200 h-full w-1/3 p-10"
        >
            <h2 class="text-primary-100 font-bold text-xl">Plataforma 360</h2>
            <ul class="flex flex-col w-full font-semibold">
                {
                    arrayCabina2?.map((element, i) => (
                        <li class="flex items-center justify-between text-right gap-5 my-3">
                            <div class="w-16">
                               </div>
                            <p class="font-thin">{element.title}</p>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</section>
